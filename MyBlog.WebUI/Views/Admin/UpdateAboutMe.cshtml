@model AboutMe

@{
    ViewData["Title"] = "UpdateAboutMe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex flex-column gap-3">
    <a asp-controller="Admin" asp-action="AboutMeList" class="btn btn-primary text-light rounded-circle d-flex align-items-center justify-content-center text-center" style="width: 26px; height: 26px;"><i class="fa-solid fa-chevron-left text-center"></i></a>
    <form method="POST" class="d-flex flex-column gap-2">
        <div class="form-group">
            <label asp-for="Description" class="text-dark fw-bold">Açıklama</label>
            <textarea class="form-control" asp-for="Description">@Model.Description</textArea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeId" class="text-dark fw-bold">Home Id</label>
            <input type="number" asp-for="HomeId" class="form-control" min="1" value="@Model.HomeId">
            <span asp-validation-for="HomeId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary text-light px-4 py-2">Güncelle</button>
        </div>
    </form>
</div>


