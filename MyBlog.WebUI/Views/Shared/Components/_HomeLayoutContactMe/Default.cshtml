@model ContactMe

<div id="contact">
    <div class="container">
        <div class="row">
            <div class="contanctLeft">
                <h1 class="subTitle">Contact Me</h1>
                <p><i class="fa-solid fa-paper-plane"></i>@Model.Email</p>
                <p><i class="fa-solid fa-square-phone"></i>@Model.Phone</p>
                <div class="socialIcons">
                    @{
                        foreach (var socialMedia in Model.SocialMedias)
                        {
                            <a href="@socialMedia.Url" target="_blank"><i class="@socialMedia.Icon"></i></a>
                        }
                    }
                </div>
                <a href="@Model.CVUrl" class="btn btn2 text-light">Download CV</a>
            </div>
            <div class="contanctRight">
                <form action="">
                    <input type="text" name="Name" placeholder="Your Name" required />
                    <input type="email"
                           name="email"
                           placeholder="Your Email"
                           required />
                    <textarea name="Message"
                              rows="6"
                              placeholder="Your Message"></textarea>
                    <button type="submit" class="btn btn2 text-light">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>