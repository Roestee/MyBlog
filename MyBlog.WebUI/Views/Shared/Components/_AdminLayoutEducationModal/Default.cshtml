@model Education

<button type="button" class="btn btn-primary text-light px-4 py-2" data-bs-toggle="modal" data-bs-target="#addEducationModal">Eğitim Ekle</button>

<div class="modal fade" id="addEducationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Eğitim Ekleme</h1>
                <button type="button" class="btn-close" id="btnCloseEducationModal" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" id="educationModalForm" class="d-flex flex-column gap-2">
                    <input type="hidden" asp-for="AboutMeId" value="@Model.AboutMeId"></input>
                    <div class="form-group">
                        <label asp-for="Title" class="text-dark fw-bold">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SchoolName" class="text-dark fw-bold">Okul Adı</label>
                        <input type="text" class="form-control" asp-for="SchoolName">
                        <span asp-validation-for="SchoolName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate" class="text-dark fw-bold">Başlama Tarihi</label>
                        <input type="date" asp-for="StartDate" class="form-control">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="text-dark fw-bold">Bitiş Tarihi</label>
                        <input type="date" asp-for="EndDate" class="form-control">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" onclick="handleAddEducation()" class="btn btn-primary text-light">Ekle</button>
            </div>
        </div>
    </div>
</div>