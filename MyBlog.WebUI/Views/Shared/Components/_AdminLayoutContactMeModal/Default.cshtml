@model ContactMe

<button type="button" class="btn btn-primary text-light px-4 py-2 mt-3" data-bs-toggle="modal" data-bs-target="#addContactMeModal">İletişim Ekle</button>

<div class="modal fade" id="addContactMeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">İletişim Ekleme</h1>
                <button type="button" class="btn-close" id="btnCloseContactMeModal" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" id="contactMeModalForm" class="d-flex flex-column gap-2" enctype="multipart/form-data">
                    <input type="hidden" asp-for="HomeId" value="@Model.HomeId"></input>
                    <input type="hidden" asp-for="CVUrl" id="contactMeModalCvUrlInput"/>
                    <div class="form-group">
                        <label asp-for="Email" class="text-dark fw-bold">Email</label>
                        <input type="email" class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="text-dark fw-bold">Telefon</label>
                        <input type="text" class="form-control" asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <label for="cvFileInput" class="text-dark fw-bold">CV Yükle</label>
                        <input type="file" id="cvFileInput" onchange="uploadCV()" accept=".pdf, .word"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" onclick="handleAddContactMe()" class="btn btn-primary text-light">Ekle</button>
            </div>
        </div>
    </div>
</div>