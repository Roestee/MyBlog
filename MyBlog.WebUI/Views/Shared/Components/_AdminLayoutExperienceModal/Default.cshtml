@model Experience

<button type="button" class="btn btn-primary text-light px-4 py-2" data-bs-toggle="modal" data-bs-target="#addExperienceModal">İş Tecrübesi Ekle</button>

<div class="modal fade" id="addExperienceModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">İş Tecrübesi Ekleme</h1>
                <button type="button" class="btn-close" id="btnCloseExperienceModal" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" id="experienceModalForm" class="d-flex flex-column gap-2">
                    <input type="hidden" asp-for="AboutMeId" value="@Model.AboutMeId"></input>
                    <div class="form-group">
                        <label asp-for="Title" class="text-dark fw-bold">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="text-dark fw-bold">Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JobStartDate" class="text-dark fw-bold">Başlama Tarihi</label>
                        <input type="date" asp-for="JobStartDate" class="form-control">
                        <span asp-validation-for="JobStartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StillWorking" class="text-dark fw-bold">Hala Çalışıyorum</label>
                        <input type="checkbox" asp-for="StillWorking" class="form-check-input" onchange="onStillWorkingInputChange(checked)"/>
                    </div>
                    <div class="form-group" id="stillWorkingGroupOnModal">
                        <label asp-for="JobEndDate" class="text-dark fw-bold">Bitiş Tarihi</label>
                        <input type="date" asp-for="JobEndDate" class="form-control">
                        <span asp-validation-for="JobEndDate" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" onclick="handleAddExperience()" class="btn btn-primary text-light">Ekle</button>
            </div>
        </div>
    </div>
</div>