@model Work

<button type="button" class="btn btn-primary text-light px-4 py-2 mt-3" data-bs-toggle="modal" data-bs-target="#addWorkModal">İş Ekle</button>

<div class="modal fade" id="addWorkModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">İş Ekleme</h1>
                <button type="button" class="btn-close" id="btnCloseWorkModal" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" id="workModalForm" class="d-flex flex-column gap-2" enctype="multipart/form-data">
                    <input type="hidden" asp-for="MyWorksId" value="@Model.MyWorksId"></input>
                    <input type="hidden" asp-for="BackgroundImgUrl" id="workModalBgUrlInput"/>
                    <div class="form-group">
                        <label asp-for="Title" class="text-dark fw-bold">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="text-dark fw-bold">Açıklama</label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <label for="workBgFileInput" class="text-dark fw-bold">Arka Plan Resmi Yükle</label>
                        <input type="file" id="workBgFileInput" onchange="uploadBgImage()" accept=".png, .jpg, .jpeg"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" onclick="handleAddWork()" class="btn btn-primary text-light">Ekle</button>
            </div>
        </div>
    </div>
</div>