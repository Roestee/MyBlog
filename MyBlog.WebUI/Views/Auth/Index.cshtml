@model AuthModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center py-5" id="loginContainer">
    <div class="col-3 d-flex flex-column gap-4 bg-light px-5" style="border-radius: 2%; height: 60vh;">
        <h1 class="mt-5 text-dark fw-bolder text-center fs-2">Giriş</h1>
        <form class="d-flex flex-column gap-4" asp-action="Login">
            <div class="d-flex flex-column">
                <label asp-for="Email" class="text-dark fs-6">Email</label>
                <div class="d-flex align-items-center gap-1 input_group position-relative">
                    <i class="fa-solid fa-user"></i>
                    <input type="email" class="border-0 bg-light my-0 text-dark fs-6 py-1" placeholder="Mailinizi giriniz" asp-for="Email">
                    <span class="focus-input100"></span>
                </div>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="Password" class="text-dark fs-6">Şifre</label>
                <div class="d-flex align-items-center gap-1 input_group position-relative">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" class="border-0 bg-light my-0 text-dark fs-6 py-1" placeholder="Şifrenizi giriniz" asp-for="Password">
                    <span class="focus-input100"></span>
                </div>
                <div class="d-flex justify-content-end mt-1">
                    <a asp-action="ResetPassword" class="fs-6 text-dark text-decoration-none">Şifrenizi mi unuttunuz?</a>
                </div>
            </div>
            <div class="w-100 d-flex justify-content-center mt-2">
                <button type="submit" class="btn btn-danger m-0 px-0 py-2" style="width: 300px; border-radius: 25px;">Giriş Yap</button>
            </div>
        </form>
        <div class="d-flex flex-column gap-2 align-items-center">
            <p class="text-secondary">Ya da</p>
            <a asp-action="Register" class="text-dark fw-bold text-decoration-none fs-6">KAYIT OL</a>
        </div>
    </div>
</div>
