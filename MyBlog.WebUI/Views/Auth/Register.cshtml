@model AuthModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center py-5 authContainer">
    <div class="d-flex flex-column gap-4 bg-light px-5" style="border-radius: 2%; width: 400px; height: 60vh;">
        <h1 class="mt-5 text-dark fw-bolder text-center fs-2">Kayıt</h1>
        <form class="d-flex flex-column gap-4" asp-action="Register">
            <div class="d-flex flex-column">
                <label asp-for="Email" class="text-dark fs-6">Email</label>
                <div class="d-flex align-items-center gap-1 input_group position-relative">
                    <i class="fa-solid fa-user"></i>
                    <input type="email" class="border-0 bg-light my-0 text-dark fs-6 py-1" placeholder="Mailinizi giriniz" asp-for="Email">
                    <span class="focus-input100"></span>
                </div>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="Password" class="text-dark fs-6">Şifre</label>
                <div class="d-flex align-items-center gap-1 input_group position-relative">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" class="border-0 bg-light my-0 text-dark fs-6 py-1" placeholder="Şifrenizi giriniz" asp-for="Password">
                    <span class="focus-input100"></span>
                </div>
            </div>
            <div class="wrap-form-btn">
                <div class="auth-form-bgbtn"></div>
                <button type="submit">KAYIT OL</button>
            </div>
        </form>
        <div class="d-flex flex-column gap-2 align-items-center">
            <p class="text-secondary">Ya da</p>
            <a asp-action="Index" asp-controller="Auth" class="text-dark fw-bold text-decoration-none fs-6">GİRİŞ YAP</a>
        </div>
    </div>
</div> 